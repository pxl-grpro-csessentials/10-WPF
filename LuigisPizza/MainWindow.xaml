<Window x:Class="LuigisPizza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuigisPizza"
        mc:Ignorable="d"
        Title="Luigi's pizza" Icon="/Images/LuigisPizza.png" Name="orderWindow" Height="580" Width="1100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" FontSize="20" Margin="20">
            Luigi's pizza
        </TextBlock>
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="20 0 0 0">
            <TextBlock FontSize="20" Margin="5">Naam</TextBlock>
            <TextBox Name="nameTextBox" Margin="5" TextChanged="NameAndPhoneTextBox_TextChanged"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="20 0 0 0">
            <TextBlock FontSize="20" Margin="5">Telefoonnummer</TextBlock>
            <TextBox Name="phoneTextBox" Margin="5" TextChanged="NameAndPhoneTextBox_TextChanged"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0" Margin="20 0 0 0">
            <TextBlock FontSize="20" Margin="5">E-mail</TextBlock>
            <TextBox Name="mailTextBox" Margin="5"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="0" Margin="20 0 0 0">
            <TextBlock FontSize="20" Margin="5">Adres</TextBlock>
            <TextBox Name="addressTextBox" Margin="5"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="0" Margin="20 0 0 0">
            <TextBlock FontSize="20" Margin="5">Woonplaats</TextBlock>
            <TextBox Name="cityTextBox" Margin="5"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="6" Grid.Column="0" Margin="20 0 0 0">
            <TextBlock FontSize="20" Margin="5">Postcode</TextBlock>
            <TextBox Name="zipcodeTextBox" Margin="5"></TextBox>
        </StackPanel>
        <GroupBox Header="Pizza's" Grid.Column="1" Grid.Row="1" Grid.RowSpan="4" Margin="50 0 50 0" >
            <StackPanel Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <WrapPanel>
                        <Button Name="quattroStagioniMinButton" Width="20" Height="20" Click="Btn_Click" IsEnabled="False">-</Button>
                        <TextBox x:Name="quattroStagioniTextBox" Width="20" Margin="5" KeyDown="Tb_KeyDown" TextChanged="Tb_TextChanged" Tag="">0</TextBox>
                        <Button Name="quattroStagioniPlusButton" Width="20" Height="20" Click="Btn_Click">+</Button>
                        <TextBlock Margin="5">Quattro Stagioni (€12,5)</TextBlock>
                    </WrapPanel>
                    <Slider Name="quattroStagioniSlider" Grid.Column="0" Margin="5 0 0 0" HorizontalAlignment="Right" Minimum="0" Maximum="10" Width="100" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="Slider_ValueChanged"></Slider>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="31*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
                        <Button Name="capricciosaMinButton" Width="20" Height="20" Click="Btn_Click" IsEnabled="False">-</Button>
                        <TextBox x:Name="capricciosaTextBox" Width="20" Margin="5" KeyDown="Tb_KeyDown" TextChanged="Tb_TextChanged" Tag="">0</TextBox>
                        <Button Name="capricciosaPlusButton" Width="20" Height="20" Click="Btn_Click">+</Button>
                        <TextBlock Margin="5">Capricciosa (€13,0)</TextBlock>
                    </StackPanel>
                    <Slider Name="capricciosaSlider" Grid.Column="0" Margin="5 0 0 0" HorizontalAlignment="Right" Minimum="0" Maximum="10" Width="100" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="Slider_ValueChanged"></Slider>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Name="salamiMinButton" Width="20" Height="20" Click="Btn_Click" IsEnabled="False">-</Button>
                        <TextBox x:Name="salamiTextBox" Width="20" Margin="5" KeyDown="Tb_KeyDown" TextChanged="Tb_TextChanged" Tag="">0</TextBox>
                        <Button Name="salamiPlusButton" Width="20" Height="20" Click="Btn_Click">+</Button>
                        <TextBlock Margin="5">Salami Al Fuoco (€12,0)</TextBlock>
                    </StackPanel>
                    <Slider Name="salamiSlider" Grid.Column="0" Margin="5 0 0 0" HorizontalAlignment="Right" Minimum="0" Maximum="10" Width="100" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="Slider_ValueChanged"></Slider>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Name="prosciuttoMinButton" Width="20" Height="20" Click="Btn_Click" IsEnabled="False">-</Button>
                        <TextBox x:Name="prosciuttoTextBox" Width="20" Margin="5" KeyDown="Tb_KeyDown" TextChanged="Tb_TextChanged" Tag="">0</TextBox>
                        <Button Name="prosciuttoPlusButton" Width="20" Height="20" Click="Btn_Click">+</Button>
                        <TextBlock Margin="5">Prosciutto Cotto (€11,0)</TextBlock>
                    </StackPanel>
                    <Slider Name="prosciuttoSlider" Grid.Column="0" Margin="5 0 0 0" HorizontalAlignment="Right" Minimum="0" Maximum="10" Width="100" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="Slider_ValueChanged"></Slider>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Name="quattroFromaggiMinButton" Width="20" Height="20" Click="Btn_Click" IsEnabled="False">-</Button>
                        <TextBox x:Name="quattroFromaggiTextBox" Width="20" Margin="5" KeyDown="Tb_KeyDown" TextChanged="Tb_TextChanged" Tag="">0</TextBox>
                        <Button Name="quattroFromaggiPlusButton" Width="20" Height="20" Click="Btn_Click">+</Button>
                        <TextBlock Margin="5">Quattro Fromaggi (€12,5)</TextBlock>
                    </StackPanel>
                    <Slider Name="quattroFromaggiSlider" Grid.Column="0" Margin="5 0 0 0" HorizontalAlignment="Right" Minimum="0" Maximum="10" Width="100" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="Slider_ValueChanged"></Slider>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Name="hawaiMinButton" Width="20" Height="20" Click="Btn_Click" IsEnabled="False">-</Button>
                        <TextBox x:Name="hawaiTextBox" Width="20" Margin="5" KeyDown="Tb_KeyDown" TextChanged="Tb_TextChanged" Tag="">0</TextBox>
                        <Button Name="hawaiPlusButton" Width="20" Height="20" Click="Btn_Click">+</Button>
                        <TextBlock Margin="5">Hawaï (€12,0)</TextBlock>
                    </StackPanel>
                    <Slider Name="hawaiSlider" Grid.Column="0" Margin="5 0 0 0" HorizontalAlignment="Right" Minimum="0" Maximum="3" Width="100" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="Slider_ValueChanged"></Slider>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Name="margheritaMinButton" Width="20" Height="20" Click="Btn_Click" IsEnabled="False">-</Button>
                        <TextBox x:Name="margheritaTextBox" Width="20" Margin="5" KeyDown="Tb_KeyDown" TextChanged="Tb_TextChanged">0</TextBox>
                        <Button Name="margheritaPlusButton" Width="20" Height="20" Click="Btn_Click">+</Button>
                        <TextBlock Margin="5">Margherita (€9)</TextBlock>
                    </StackPanel>
                    <Slider Name="margheritaSlider" Grid.Column="0" Margin="5 0 0 0" HorizontalAlignment="Right" Minimum="0" Maximum="10" Width="100" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="Slider_ValueChanged"></Slider>
                </Grid>
            </StackPanel>
        </GroupBox>
        <Button Name="orderButton" IsEnabled="False" Width="200" Height="35" Grid.Row="5" Grid.Column="1" Click="PlaceOrder">Bestel Pizza's</Button>
        <TextBlock Name="answerTextBlock" Grid.Row="3" Grid.Column="2" Grid.RowSpan="5" Margin="10" TextWrapping="Wrap">
            Onze Pizza's zijn de <Bold>beste!</Bold><LineBreak/>Het is
            wetenschappelijk bewezen dat pizza's <Bold>goed</Bold> zijn voor
            je gezondheid.
        </TextBlock>
        <Image Name="pizzaImage" Grid.Row="6" Grid.Column="1" Grid.RowSpan="2" Margin="5"></Image>

        <GroupBox Header="Toppings" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2">
            <StackPanel Name="toppingsStackPanel">
                <!--<CheckBox Margin="5" Name="mozzarellaCheckBox">Extra mozzarella (€0,75)</CheckBox>
                <CheckBox Margin="5" Name="salamiCheckBox">Extra salami (€1,25)</CheckBox>
                <CheckBox Margin="5" Name="ansjovisCheckBox">Extra ansjovis (€0,50)</CheckBox>
                <CheckBox Margin="5" Name="artisjokCheckBox">Extra artisjok (€0,80)</CheckBox>-->
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
