<Window x:Class="RubiksCube.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RubiksCube"
        mc:Ignorable="d"
        Title="Rubiks Cube" Height="450" Width="450">
    <Grid Background="Black" x:Name="rubriksGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="1" Background="Yellow" Margin="5"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               Grid.Row="0" Grid.Column="0"
               Grid.ColumnSpan="4"/>
        <Label Content="2" Background="Blue" Margin="5"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               Grid.Row="0" Grid.Column="4"
               Grid.RowSpan="3"/>
        <Label Content="3" Background="Red" Margin="5"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               Grid.Row="1" Grid.Column="0"
               Grid.ColumnSpan="3"/>
        <Label Content="4" Background="Green" Margin="5"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               Grid.Row="1" Grid.Column="3"
               Grid.RowSpan="2"/>
        <Label Content="5" Background="Blue" Margin="5"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               Grid.Row="2" Grid.Column="0"
               Grid.RowSpan="3"/>
        <Label Content="6" Background="Green" Margin="5"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               Grid.Row="2" Grid.Column="1"
               Grid.RowSpan="2"/>
        <Label Content="7" Background="Yellow" Margin="5"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               Grid.Row="2" Grid.Column="2"/>
        <Label Content="8" Background="Red" Margin="5"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="3"/>
        <Label Content="9" Background="Yellow" Margin="5"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4"/>
    </Grid>
</Window>
