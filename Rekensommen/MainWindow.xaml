<Window x:Class="Rekensommen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rekensommen"
        mc:Ignorable="d"
        Title="Rekensommen" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="LightGray"/>
            <GradientStop Color="DarkGray" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--<Border Grid.ColumnSpan="5" Margin="10" BorderThickness="1" >
            <Border.BorderBrush>
                <SolidColorBrush Color="#FFB4B4B4"/>
            </Border.BorderBrush>
            <StackPanel Orientation="Horizontal" Margin="10">

            </StackPanel>
        </Border>-->
        <GroupBox Header="Opties" Margin="10" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="5">
                    <Label Content="Getal1" FontWeight="Bold" Margin="5 0"/>
                    <Label Content="Van: " Margin="10 0" Padding="0"/>
                    <TextBox Text="0" Margin="10,0,10,10" Name="firstNumberMinTextBox" TextAlignment="Right" TextChanged="Range_TextChanged" KeyDown="Range_KeyDown"/>
                    <Label Content="Tot: " Margin="10 0" Padding="0"/>
                    <TextBox Text="100" Margin="10,0,10,10" Name="firstNumberMaxTextBox" TextAlignment="Right" TextChanged="Range_TextChanged"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5">
                    <Label Content="Getal2" FontWeight="Bold" Margin="5 0"/>
                    <Label Content="Van: " Margin="10 0" Padding="0"/>
                    <TextBox Text="0" Margin="10,0,10,10" Name="secondNumberMinTextBox" TextAlignment="Right" TextChanged="Range_TextChanged"/>
                    <Label Content="Tot: " Margin="10 0" Padding="0"/>
                    <TextBox Text="100" Margin="10 0" Name="secondNumberMaxTextBox" TextAlignment="Right" TextChanged="Range_TextChanged"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox Header="Bewerkingen" Margin="10" Grid.Column="2" Padding="10">
            <StackPanel>
                <CheckBox Content="Optellen" IsChecked="True" Margin="5" Name="addOperatorCheckBox"/>
                <CheckBox Content="Aftrekken" IsChecked="True" Margin="5" Name="subtractOperatorCheckBox"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Uitkomst"  Grid.Column="3" Grid.ColumnSpan="2" 
                  Padding="10" Margin="10">
            <StackPanel>
                <Label Content="Negatieve getallen toelaten?"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton Content="Ja" Margin="0 0 10 5" IsChecked="True" />
                    <RadioButton Content="Nee" Margin="0 0 10 5" Name="disallowNegativeRadioButton" />
                </StackPanel>
                <Label Content="Maximum toepassen?"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton Content="Ja" Margin="0 0 10 0" Height="25" VerticalContentAlignment="Center" Name="applyMaximumRadioButton" Checked="ApplyMaximum_CheckChanged" Unchecked="ApplyMaximum_CheckChanged" />
                    <RadioButton Content="Nee" Margin="0 0 10 0" Height="25" VerticalContentAlignment="Center" IsChecked="True"  />
                    <Label Content="Maximum:" Height="25" VerticalContentAlignment="Center" />
                    <TextBox Text="100" Name="maximumResultTextBox" 
                             Height="25" VerticalContentAlignment="Center" IsEnabled="False"/>
                </StackPanel>
            </StackPanel>

        </GroupBox>
        <!--Row 2:-->
        <Label Grid.Row="1" Grid.Column="0" Name="firstNumberLabel" Margin="10"
               Content="_" FontSize="72"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Grid.Row="1" Grid.Column="1" Name="operatorLabel" Margin="10"
               Content="+" FontSize="72"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Grid.Row="1" Grid.Column="2" Name="secondNumberLabel" Margin="10"
               Content="_" FontSize="72"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Grid.Row="1" Grid.Column="3" Name="equalsLabel" Margin="10"
               Content="=" FontSize="72"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDoubleClick="equalsLabel_MouseDoubleClick"/>
        <TextBox Grid.Row="1" Grid.Column="4" Margin="10" Text="??" Name="resultTextBox"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="72"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center" KeyDown="resultTextBox_KeyDown" />
        <!--Row 3-->
        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="10"
                   Name="infoLabel" 
                   Foreground="White" FontSize="16" 
                   TextWrapping="WrapWithOverflow" Padding="5">

            <Bold><Underline>Instructies</Underline></Bold><LineBreak/>
            - Dubbelklik =<LineBreak/>
            - Vul het antwoord in en druk op Enter<LineBreak/>
            - Verbeter je tijd!

        </TextBlock>
        <Button Grid.Row="2" Grid.Column="2" Margin="20" Name="showTimeButton" Click="showTimeButton_Click" >
            <Image Source="/clock.png" Stretch="UniformToFill" Margin="10" />
        </Button>
        <Label Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" Margin="10"
               Name="timerLabel" 
               Foreground="White" FontSize="32" 
               Content="00:00.000" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
        </Label>
    </Grid>
</Window>
