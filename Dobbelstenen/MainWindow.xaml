<Window x:Class="Dobbelstenen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dobbelstenen"
        mc:Ignorable="d"
        Title="🎲🎲 Dobbelstenen 🎲🎲" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" Grid.Column="0" x:Name="firstDiceImage" Margin="10" Source="/Images/dice-1.png"/>
        <Image Grid.Row="0" Grid.Column="1" x:Name="secondDiceImage" Margin="10" Source="/Images/dice-1.png"/>

        <DockPanel Grid.Column="2" Grid.RowSpan="2" Margin="10" LastChildFill="False">
            <Button Click="OnRollOnceClicked" DockPanel.Dock="Top" Content="Roll the dice! (only once)" Padding="5" Margin="5" Background="#FFFF7700"/>
            <Button Click="OnRollSimuationClicked" DockPanel.Dock="Top" Content="Roll the dice! (a lot...)" Padding="5" Margin="5,20,5,5" Background="#FFFF7700"/>
            <Slider ValueChanged="OnSliderChanged" DockPanel.Dock="Top" Value="10" Minimum="10" Maximum="100" 
                    Padding="5" Margin="5,20,5,5"
                    IsSnapToTickEnabled="True" TickFrequency="10" TickPlacement="Both" SmallChange="1"/>
            <Label x:Name="numberOfRollsLabel" Content="10" DockPanel.Dock="Top" HorizontalAlignment="Center"/>
            <Button Click="OnCloseClicked" DockPanel.Dock="Bottom" Content="Afsluiten" Padding="5" Margin="5" Background="#FFFF7700"/>
        </DockPanel>

        <GroupBox Padding="5" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" 
                  Header=" Resultaten simulatie " Margin="10" BorderBrush="#FFFF7700" BorderThickness="2,2,2,2">
            <Grid x:Name="resultGrid">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                
                <Label Grid.Row="1" Grid.Column="0" Content="Som dobbelstenen 2: " VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="result2TextBox" Text="0" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Grid.Row="2" Grid.Column="0" Content="Som dobbelstenen 3: " VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="result3TextBox" Text="0" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Grid.Row="3" Grid.Column="0" Content="Som dobbelstenen 4: " VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="result4TextBox" Text="0" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Grid.Row="4" Grid.Column="0" Content="Som dobbelstenen 5: " VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="result5TextBox" Text="0" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Grid.Row="5" Grid.Column="0" Content="Som dobbelstenen 6: " VerticalAlignment="Center"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="result6TextBox" Text="0" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

                <Label Grid.Row="0" Grid.Column="2" Content="Som dobbelstenen 7: " VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="3" x:Name="result7TextBox" Text="0" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Grid.Row="1" Grid.Column="2" Content="Som dobbelstenen 8: " VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="3" x:Name="result8TextBox" Text="0" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Grid.Row="2" Grid.Column="2" Content="Som dobbelstenen 9: " VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="3" x:Name="result9TextBox" Text="0" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Grid.Row="3" Grid.Column="2" Content="Som dobbelstenen 10: " VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="3" x:Name="result10TextBox" Text="0" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Grid.Row="4" Grid.Column="2" Content="Som dobbelstenen 11: " VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="3" x:Name="result11TextBox" Text="0" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Label Grid.Row="5" Grid.Column="2" Content="Som dobbelstenen 12: " VerticalAlignment="Center"/>
                <TextBox Grid.Row="5" Grid.Column="3" x:Name="result12TextBox" Text="0" Width="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

            </Grid>
        </GroupBox>
    </Grid>
</Window>
