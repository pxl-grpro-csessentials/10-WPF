<Window x:Class="Registratie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registratie"
        mc:Ignorable="d"
        Title="Inschrijvingen graduaat programmeren" Height="600" Width="600">
    <Grid >
        <TextBlock Text="Gegevens" 
                   FontWeight="Bold" FontSize="16"
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,20,0,50"/>
        <Label Content="Naam:" HorizontalAlignment="Left" Margin="50,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Margin="50,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="217"/>
        <Label Content="Geboortedatum:" HorizontalAlignment="Left" Margin="50,120,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="birthDatePicker" HorizontalAlignment="Left" Margin="50,145,0,0" VerticalAlignment="Top" Width="217"/>
        <Label Content="Geslacht: " HorizontalAlignment="Left" Margin="50,180,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="mRadioButton" Content="M" HorizontalAlignment="Left" Margin="50,205,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="vRadioButton" Content="V" HorizontalAlignment="Left" Margin="99,205,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="xRadioButton" Content="X" HorizontalAlignment="Left" Margin="144,205,0,0" VerticalAlignment="Top"/>
        <Label Content="Huidig diploma:" HorizontalAlignment="Left" Margin="51,240,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="secundaryCheckBox" Content="Secundair onderwijs ASO/TSO/BSO" HorizontalAlignment="Left" Margin="50,270,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="higherCheckBox" Content="Hoger onderwijs (bachelor/graduaat)" HorizontalAlignment="Left" Margin="51,295,0,0" VerticalAlignment="Top"/>
        <TextBlock Text="Olods" 
            FontWeight="Bold" FontSize="16"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,343,0,0"/>
        <Label Content="Studiepunten: " HorizontalAlignment="Left" Margin="150,342,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="creditsTextBlock" HorizontalAlignment="Left" Margin="237,347,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="30" TextAlignment="Right"/>
        <ListBox x:Name="olodListBox" HorizontalAlignment="Left" Width="216" Margin="51,374,0,90" SelectionMode="Multiple" SelectionChanged="olodListBox_SelectionChanged" />
        <Button x:Name="addButton" Content="Inschrijven" Padding="10" HorizontalAlignment="Left" Margin="50,509,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.51,-0.441" Click="addButton_Click"/>
        
        <TextBlock Text="Student" 
            FontWeight="Bold" FontSize="16"
            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,241,0"/>
        <ComboBox x:Name="studentComboxBox" HorizontalAlignment="Left" Margin="380,21,0,0" VerticalAlignment="Top" Width="175" SelectionChanged="studentComboxBox_SelectionChanged"/>
        <TextBlock x:Name="studentTextBlock" HorizontalAlignment="Right" Margin="0,65,45,0" TextWrapping="Wrap" VerticalAlignment="Top"
                   Background="LightGray" Width="175" Height="300"/>
        <Button x:Name="deleteButton" Content="Verwijderen" Padding="10" HorizontalAlignment="Left" Margin="471,374,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.51,-0.441"/>
    </Grid>
</Window>
