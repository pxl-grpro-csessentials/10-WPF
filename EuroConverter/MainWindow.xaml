<Window x:Class="EuroConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EuroConverter"
        mc:Ignorable="d"
        Title="Euro to BEF converter" Height="200" Width="500" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Bedrag in euro:" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Bedrag in frank:" HorizontalAlignment="Left" Margin="50,104,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="euroTextBox" HorizontalAlignment="Left" Margin="160,54,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" TextAlignment="Right" TabIndex="0" TextChanged="euroTextBox_TextChanged"/>
        <TextBox x:Name="frankTextBox" IsReadOnly="True" HorizontalAlignment="Left" Margin="160,108,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" TextAlignment="Right" IsTabStop="False"/>
        <Button x:Name="convertButton" Content="Berekenen" HorizontalAlignment="Left" Margin="325,47,0,0" VerticalAlignment="Top" Height="32" Width="115" Click="convertButton_Click"/>
        <Button x:Name="clearButton" Content="Wissen" HorizontalAlignment="Left" Margin="325,101,0,0" VerticalAlignment="Top" Height="32" Width="115" Click="clearButton_Click"/>

    </Grid>
</Window>
