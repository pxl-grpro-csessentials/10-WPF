<Window x:Class="Blackjack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blackjack"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="♥️ ♦ ♠ ♣ Blackjack ♥ ♦ ♠ ♣" Height="800" Width="1200" 
        FontSize="18" Foreground="White">
    <Window.Background>
        <ImageBrush ImageSource="/images/blackjack-background.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="Transparent" />
            </LinearGradientBrush>
        </Grid.Background>
        <GroupBox Grid.Row="0" 
                  Grid.Column="0" 
                  Grid.RowSpan="3"
                  Header="Game"
                  Margin="10" >
            <StackPanel>
                <Button Content="New Game" Padding="5" Margin="10" 
                        Background="DarkGreen" Foreground="White"
                        x:Name="newGameButton" Click="OnNewGame_Clicked" 
                        BorderBrush="Green" BorderThickness="4" />

                <Separator />
                <TextBlock Text="Credits:" Margin="10"/>
                <TextBlock x:Name="creditsTextBlock" Margin="10" FontSize="36" Text="500" TextAlignment="Right"/>
                <Separator />
                
                
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Row="0" 
                  Grid.Column="1" 
                  Margin="10"
                  Header="Bank">
            <StackPanel Orientation="Horizontal" x:Name="bankStack" Margin="5" Width="910" Height="170">
                
            </StackPanel>
        </GroupBox>
        <Grid Grid.Row="1" Grid.Column="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="resultGrid" Grid.ColumnSpan="3" Visibility="Hidden"
                   Panel.ZIndex="1" >
                <TextBlock x:Name="resultTextBlock" Text="You won!!!" FontSize="72"
                         HorizontalAlignment="Center" VerticalAlignment="Center"  />
                <Button x:Name="nextGameButton" Click="OnNextGame_Clicked" Content="Next" 
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Width="100" Height="50"
                        Padding="5" Margin="10" 
                        FontSize="24"
                        Background="DarkGreen" Foreground="White"
                        BorderBrush="Green" BorderThickness="4"/>
                <Button x:Name="endGameButton" Content="Stop" Width="100" Height="50"
                        HorizontalAlignment="Left" VerticalAlignment="Bottom"
                        Padding="5" Margin="10" 
                        FontSize="24"
                        Background="DarkRed" Foreground="White"
                        BorderBrush="Red" BorderThickness="4"/>

            </Grid>

            <StackPanel x:Name="playerBetPanel" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Place your bet:" Margin="10"  />
                <TextBox x:Name="playerBetTextBox" Margin="10" TextAlignment="Right"/>
                <Button Content="Play" Padding="5" Margin="10" 
                    Background="DarkGreen" Foreground="White"
                    x:Name="playButton" Click="OnPlay_Clicked" 
                    BorderBrush="Green" BorderThickness="4" />
            </StackPanel>
            
            <Image Grid.Column="1" Source="/images/cards/back.png" Width="120" Stretch="Uniform"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="1" x:Name="remainingCardsTextBlock" Margin="10" 
                FontSize="36" Text="52" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <TextBlock Grid.Column="2" x:Name="bankPointsTextBlock" Margin="10" FontSize="36"  Text="0" 
                       VerticalAlignment="Top" HorizontalAlignment="Right"/>

            <TextBlock Grid.Column="2" x:Name="playerPointsTextBlock" Margin="10" FontSize="36"  Text="0" 
                      VerticalAlignment="Bottom" HorizontalAlignment="Right"/>

            <Grid Grid.Column="1" x:Name="actionsGrid"  HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Content="Card" Padding="5" Margin="5" Grid.Column="0" Width="75"
                    Background="DarkGreen" Foreground="White"
                    x:Name="cardButton" Click="OnCard_Clicked" 
                    BorderBrush="Green" BorderThickness="4" />
                <Button Content="Stop" Padding="5" Margin="5" Grid.Column="1" Width="75"
                    Background="DarkRed" Foreground="White"
                    x:Name="stopButton" Click="OnStop_Clicked" 
                    BorderBrush="Red" BorderThickness="4" />
            </Grid>
        </Grid>
        <GroupBox Grid.Row="2" 
                Grid.Column="1" 
                Margin="10"
                Header="Player">
            <StackPanel Orientation="Horizontal" x:Name="playerStack" Margin="5" Width="910" Height="170">

            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
