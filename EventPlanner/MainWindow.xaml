<Window x:Class="EventPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventPlanner"
        mc:Ignorable="d"
        Title="Eventplanner" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock = "Top" >
            <MenuItem Header = "Events" >
                <MenuItem Header = "Verwijder alle events" Click="delete_MenuItem"></MenuItem>
                <MenuItem Header = "Maak standaard event" Click="default_MenuItem"></MenuItem>
            </MenuItem>
            <MenuItem Header = "Afsluiten" Click="close_MenuItem"></MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="20">
                <TextBlock Margin="10" Text="Type event"></TextBlock>
                <ComboBox Margin="10" Name="eventTypeComboBox"></ComboBox>
                <TextBlock Margin="10" Text="Naam event"></TextBlock>
                <TextBox Margin="10" Name="nameEventTextBox"></TextBox>
                <TextBlock Margin="10" Text="Aantal bezoekers"></TextBlock>
                <TextBox Margin="10" Name="numberOfVisitorsTextBox"></TextBox>
                <Button Margin="10" Width="200" Height="30" Name="addButton" Content="Voeg event toe" Click="addButton_Click"></Button>
                <Button Margin="10" Width="200" Height="30" Name="deleteButton" Content="Verwijder event" Click="deleteButton_Click"></Button>
            </StackPanel>
            <ListBox Name="itemsListBox" Margin="20" Grid.Column="1"></ListBox>
        </Grid>
    </DockPanel>
</Window>
